{
	"env": {
		"es2021": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:import/typescript"
	],
	"ignorePatterns": ["*.js"],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint",
		"import",
		"unused-imports"
	],
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"double"
		],
		"semi": [
			"error",
			"always"
		],
		"import/export": "error",
		"import/no-duplicates": "error",
    "@typescript-eslint/no-unused-vars": "off",
		"unused-imports/no-unused-imports": "error",
		"@typescript-eslint/ban-ts-comment": "off"
	},
	"settings": {
		"import/resolver": {
			"typescript": true,
			"node": true
		},
		"import/extensions": [
			".js",
			".ts"
		]
	}
}
